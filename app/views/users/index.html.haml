.wrapper
  = render 'shared/header'
  - breadcrumb :index_user
  = render 'shared/breadcrumbs'
  .main-box
    .mypage-main
      = render 'shared/side-bar'
      .right-container
        .user-top
          %a.top-box
            .user-img
              = image_tag 'mer.png', alt: '', height: '60', width: '60', id: 'img-top'
            .user-nick
              = @user.nickname
            .user-val
              評価
              %span.bold 0
              出品数
              %span.bold 0
        .user-notice
          %ul.user-tab
            %li.active-1
              %h3
                %a.do-1
                  お知らせ
            %li.active-2
              %h3
                %a.do-2
                  やることリスト
          .user-box
            = image_tag 'mer-i', alt: '', height: '100', width: '120', id: 'box-img'
            %ul.list-box
              %li.not-find-box-1
                現在、お知らせはありません

  = render 'shared/footer'
  = render 'shared/exhibition-btn'