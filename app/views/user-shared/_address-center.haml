.address-box
  .address-center-box
    .__address-small-text
      住所入力
    .__address-small-box
      .__address-list-box
        = form_with do |ad|
          .__l-address-form
            .__l-a-text
              = ad.label :"お名前"
            .__l-a-required
              必須
          .__onamae-box
            .__onamae-myouzi
            = ad.text_field :nickname, placeholder: "例)山田", class: "text-address"
            .__onamae-namae
            = ad.text_field :nickname, placeholder: "例)彩", class: "text-address"

          .__l-address-form
            .__l-a-text
              = ad.label :"お名前カナ"
            .__l-a-required
              必須
          .__onamae-kana-box
            .__onamae-kana-myouzi
            = ad.text_field :nickname, placeholder: "例)ヤマダ", class: "text-address"
            .__onamae-kana-namae
            = ad.text_field :nickname, placeholder: "例)アヤ", class: "text-address"

          .__l-address-form
            .__l-a-text
              = ad.label :"郵便番号"
            .__l-a-required
              必須
          = ad.text_field :address_postal_code, placeholder: " 例) 123-4567", class: "text-address"

          .__l-address-form
            .__l-a-text
              = ad.label :"都道府県"
            .__l-a-required
              必須
          = ad.text_field :prefecture, placeholder: "北海道", class: "text-address"

          .__l-address-form
            .__l-a-text
              = ad.label :"市区町村"
            .__l-a-required
              必須
          = ad.text_field :city, placeholder: "例) 横浜市緑区", class: "text-address"

          .__l-address-form
            .__l-a-text
              = ad.label :"番地"
            .__l-a-required
              必須
          = ad.text_field :address, placeholder: "例) 青山1-1-1", class: "text-address"

          .__l-address-form
            .__l-a-text
              = ad.label :"建物名"
            .__a-l-required
              任意
          = ad.text_field :build, placeholder: "例) 柳ビル103", class: "text-address"

          .__l-address-form
            .__l-a-text
              = ad.label :"電話"
            .__a-l-required
              任意
          = ad.telephone_field :telephone, placeholder: "例) 09012345678", class: "text-address"

          .__address-red-move
            = link_to "次へ進む" , payment_ragistrations_path, class: 'address-payment'


