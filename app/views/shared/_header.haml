.header
  .inner
    .top
      .title
        %img{src: "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?863303983",width:'134px',height:'36px'}
      .form
        = form_with url: search_searches_path, method: :get, local: true do |f|
          = f.text_field :content, class: 'form__search', placeholder: '何をお探しで？',name: 'keyword',type:'search' ,value:''
          = link_to search_searches_path do
            = fa_icon 'search', class: 'icon-search'

    .under
      %nav.left
        %ul.header-navi
          %li.header-l-left
            = fa_icon 'list-ul', class: 'category-icon'
            %span カテゴリーから探す
          %li.header-l-right
            = fa_icon 'tag',class: 'brand-icon'
            %span ブランドから探す
      .right
        %ul.login-navi
          %li.new-create-user
            = link_to "新規会員登録", new_user_registration_path, class: 'new-ragistration-text'
          %li.login
            = link_to "ログイン" , new_user_session_path, class: 'new-user-text'